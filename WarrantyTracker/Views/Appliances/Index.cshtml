@model IEnumerable<Appliance>
@using System.Globalization

@{
    ViewData["Title"] = "My Appliances";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Add Appliance</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Brand</th>
            <th>Model</th>
            <th>Purchase Date</th>
            <th>Warranty Ends</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var a in Model)
        {
            <tr>
                <td>@a.Name</td>
                <td>@a.Brand</td>
                <td>@a.Model</td>
                <td>@a.PurchaseDate.ToString("dd-MM-yyyy", CultureInfo.InvariantCulture)</td>
                <td>
                    @if (a.LastWarrantyStatus == "No Warranty")
                    {
                        <span>No End Date</span>
                    }
                    else
                    {
                        @a.WarrantyEndDate.ToString("dd-MM-yyyy", CultureInfo.InvariantCulture)
                    }
                </td>
                <td>
                    @if (a.LastWarrantyStatus == "Active")
                    {
                        <span class="badge badge-success">Active</span>
                    }
                    else if (a.LastWarrantyStatus == "Expiring Soon")
                    {
                        <span class="badge badge-warning">Expiring</span>
                    }
                    else if (a.LastWarrantyStatus == "Expired")
                    {
                        <span class="badge badge-danger">Expired</span>
                    }
                    else if (a.LastWarrantyStatus == "No Warranty")
                    {
                        <span class="badge badge-secondary">No Warranty</span>
                    }
                </td>

                <td>
                    <a asp-action="Details" asp-route-id="@a.Id">Details</a> |
                    <a asp-action="Edit" asp-route-id="@a.Id">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@a.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
