@model Appliance
@{
    ViewData["Title"] = "Delete Appliance";
}

<h2>Delete Appliance</h2>

<h4>Are you sure you want to delete this appliance?</h4>

<div>
    <strong>Name:</strong> @Model.Name <br />
    <strong>Brand:</strong> @Model.Brand <br />
    <strong>Model:</strong> @Model.Model <br />
    <strong>Warranty Ends:</strong> @Model.WarrantyEndDate.ToShortDateString() <br />
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
