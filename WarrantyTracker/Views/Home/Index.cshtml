@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="bg-primary text-white text-center py-5">
    <div class="container">
        <h1 class="display-4 fw-bold">Welcome to Warranty Tracker!</h1>
        <p class="lead mb-4">Effortlessly manage all your product warranties in one place.</p>

        @if (User.Identity.IsAuthenticated)
        {
            <a class="btn btn-success btn-lg me-2" href="/Home/Dashboard">Go to Dashboard</a>
            <p class="mt-3">Hello, @User.Identity.Name!</p>
        }
        else
        {
            <a class="btn btn-light btn-lg me-2" href="/Identity/Account/Register">Get Started</a>
            <a class="btn btn-outline-light btn-lg" href="/Identity/Account/Login">Login</a>
        }
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row text-center g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Manage Warranties</h5>
                        <p class="card-text">Add, view, and edit all your warranties in one place.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Get Notifications</h5>
                        <p class="card-text">Receive timely reminders before your warranties expire.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Secure & Private</h5>
                        <p class="card-text">Your data is safe with Identity authentication and role-based access.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Info Section -->
<section class="bg-light py-5">
    <div class="container text-center">
        <h2 class="mb-4">Why Choose Warranty Tracker?</h2>
        <p class="lead mb-4">Simplify your warranty management, get alerts, and secure your data—all in a user-friendly interface.</p>
        <a href="/Identity/Account/Register" class="btn btn-primary btn-lg">Get Started Now</a>
    </div>
</section>
